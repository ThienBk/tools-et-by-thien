<body>
  <h2>Tách mã dạng C1COAR550ZRNAR ➜ C1COAR550     ZRNAR</h2>

  <textarea id="inputData" placeholder="Nhập các mã cần xử lý, mỗi mã một dòng..."></textarea>
  
  <div class="buttons">
    <button onclick="processData()">Xử lý</button>
    <button onclick="copyResult()">Copy kết quả</button>
    <button onclick="clearAll()">Xóa toàn bộ</button>
  </div>

  <pre id="output"></pre>

  <script>
    function processData() {
      const input = document.getElementById("inputData").value.trim();
      const lines = input.split(/\r?\n/);
      const results = [];

      lines.forEach(line => {
        line = line.trim();
        if (line) {
          // Tách phần đầu & phần đuôi dựa trên mẫu "C1COAR" + số + phần chữ còn lại
          const match = line.match(/^(C1COAR\d+)([A-Z0-9]+)$/i);
          if (match) {
            results.push(`${match[1].padEnd(15)}${match[2]}`);
          } else {
            results.push(line); // nếu không khớp thì giữ nguyên
          }
        }
      });

      document.getElementById("output").textContent = results.join("\n");
    }

    function copyResult() {
      const text = document.getElementById("output").textContent;
      if (!text) return alert("Chưa có dữ liệu để copy!");
      navigator.clipboard.writeText(text);
      alert("Đã copy kết quả!");
    }

    function clearAll() {
      document.getElementById("inputData").value = "";
      document.getElementById("output").textContent = "";
    }
  </script>
</body>
